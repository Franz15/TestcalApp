    usuario:{type: String, required: true ["Por favor introduce un usuario"], unique: [true, "el usuario ya existe"]},
    mail:{type: String, required: true ["Por favor introduce un email"], unique: [true, "el email ya existe"]},
    password:{type: String, required: true ["Por favor introduce una contrase√±a"], unique:false}

})

module.exports = mongoose.model.Users || mongoose.model("DatosUsuario", UserSchema)